# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3000

# Database
MONGO_URI=mongodb://localhost:27017/solar-backend

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
# Generate secure random strings for these (32+ characters)
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
REFRESH_SECRET=your-refresh-secret-here-minimum-32-characters

# OTP Configuration (in seconds)
OTP_TTL_SECONDS=300

# Reservation TTL (in seconds)
RESERVATION_TTL_SECONDS=900

# Cache Configuration
CACHE_PREFIX=solar:
CACHE_TTL=3600
CACHE_ENABLED=true

# Bunny.net Storage Configuration
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_API_KEY=your-bunny-api-key
BUNNY_HOSTNAME=storage.bunnycdn.com
BUNNY_CDN_HOSTNAME=your-cdn-hostname.b-cdn.net

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
IP_WHITELIST=127.0.0.1,::1,localhost
IP_BLACKLIST=

# Additional optional configurations for production:
# LOG_LEVEL=info
# CORS_ORIGIN=http://localhost:3000
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX=100

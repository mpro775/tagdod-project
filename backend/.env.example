NODE_ENV=development
PORT=3000

# Mongo (replica set mandatory for transactions)
MONGO_URI=mongodb://root:pass@mongo:27017/solar?authSource=admin&replicaSet=rs0

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=change_me_super_secret_32_chars_at_least
REFRESH_SECRET=change_me_refresh_secret_32_chars_at_least

# S3 storage (optional)
S3_ENDPOINT=http://minio:9000
S3_BUCKET=solar-bucket

# Payments (local provider sample)
PAYMENT_PROVIDER=localX
PAYMENT_SIGNING_KEY=replace_with_real_key

# SMS/PUSH (optional)
SMS_PROVIDER=dummy
PUSH_PROVIDER_KEYS={}

# TTLs
OTP_TTL_SECONDS=300
RESERVATION_TTL_SECONDS=900

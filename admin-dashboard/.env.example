# Tagadodo Admin Environment Configuration

# Application
VITE_APP_NAME=Tagadod Admin
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=ar
VITE_DEFAULT_THEME=light

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api/v1
VITE_API_TIMEOUT=30000
# Video upload timeout (ms) - recommended for large files
VITE_VIDEO_UPLOAD_TIMEOUT=600000

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Upload Settings
VITE_MAX_UPLOAD_SIZE=5242880
VITE_MAX_IMAGES_PER_PRODUCT=10

# Analytics & Tracking
VITE_GA4_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# Security
VITE_TURNSTILE_SITEKEY=1x00000000000000000000AA

# Feature Flags
VITE_ENABLE_PWA=false
